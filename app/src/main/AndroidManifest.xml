<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jvrhenen.crowdplay.app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme" >
        <activity
            android:name=".RoomOverviewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RoomPlayActivity"
            android:label="@string/room_play_title"
            android:theme="@style/Theme.Transparent"
            android:launchMode="singleTop"
            android:parentActivityName=".RoomOverviewActivity">
        </activity>
        <activity
            android:name=".RoomPlaylistActivity"
            android:label="@string/room_playlist_title"
            android:launchMode="singleTop"
            android:parentActivityName=".RoomOverviewActivity">
        </activity>
        <activity
            android:name=".HostMusicOverviewActivity"
            android:label="@string/music_overview_title"
            android:parentActivityName=".RoomPlayActivity">
        </activity>
        <activity
            android:name=".ContributorMusicOverviewActivity"
            android:label="@string/music_overview_title"
            android:parentActivityName=".RoomPlaylistActivity">
        </activity>

        <service android:name="com.jvrhenen.crowdplay.app.MusicService" />
    </application>

    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>
