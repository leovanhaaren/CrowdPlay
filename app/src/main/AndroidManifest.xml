<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jvrhenen.crowdplay.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme" >
        <activity
            android:name="com.jvrhenen.crowdplay.app.RoomsOverviewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RoomHostActivity"
            android:label="@string/room_play_title"
            android:theme="@style/Theme.Transparent"
            android:parentActivityName=".RoomsOverviewActivity">
        </activity>
        <activity
            android:name=".RoomContributorActivity"
            android:label="@string/room_play_title"
            android:parentActivityName=".RoomsOverviewActivity">
        </activity>
    </application>

</manifest>
