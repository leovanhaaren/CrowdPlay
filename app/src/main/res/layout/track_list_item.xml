<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/card_bg">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/art"
            android:scaleType="center"
            android:background="#ccc"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_action_help" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Title"
            android:textAppearance="@style/PlayListItem.Track"
            android:layout_alignTop="@+id/art"
            android:layout_toRightOf="@+id/art"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/duration"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artist"
            android:text="Artist"
            android:textAppearance="@style/PlayListItem.Artist"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/art"
            android:layout_marginLeft="8dp"
            android:layout_alignRight="@+id/title"
            android:layout_alignEnd="@+id/title"
            android:singleLine="true"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="0:00"
            android:id="@+id/duration"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textAppearance="@style/PlayListItem.Duration"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </RelativeLayout>

</RelativeLayout>