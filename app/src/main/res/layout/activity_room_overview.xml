<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jvrhenen.crowdplay.app.RoomOverviewActivity"
    android:background="@color/appBackground">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/room_overview_emptystate_title"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="20dp"
                android:textAppearance="@style/EmptyState.Title" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/room_overview_emptystate_text"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="@style/EmptyState.Text"
                android:layout_marginRight="55dp"
                android:layout_marginLeft="55dp" />
        </LinearLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:longClickable="false"
            android:background="@color/appBackground"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:drawSelectorOnTop="false"
            android:smoothScrollbar="false" />
    </FrameLayout>
</RelativeLayout>
