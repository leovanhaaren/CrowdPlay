<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/playlist_list_item_art"
            android:scaleType="fitCenter"
            android:background="#ccc"
            android:layout_marginBottom="1dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playlist_list_item_title"
                android:text="Title"
                android:textAppearance="@style/PlayListItem.Track" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playlist_list_item_artist"
                android:text="Artist"
                android:textAppearance="@style/PlayListItem.Album" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>