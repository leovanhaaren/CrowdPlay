<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp">

    <View
        android:id="@+id/horizontal_divider"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#CCC"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/playlist_list_item_art"
        android:scaleType="centerCrop"
        android:background="#ccc"
        android:src="@drawable/art_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/playlist_list_item_title"
        android:text="Title"
        android:textAppearance="@style/PlayListItem.Track"
        android:layout_alignTop="@+id/playlist_list_item_art"
        android:layout_toRightOf="@+id/playlist_list_item_art"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/horizontal_divider"
        android:layout_marginRight="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/playlist_list_item_artist"
        android:text="Artist"
        android:textAppearance="@style/PlayListItem.Album"
        android:layout_below="@+id/playlist_list_item_title"
        android:layout_toRightOf="@+id/playlist_list_item_art"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:layout_alignRight="@+id/playlist_list_item_title"
        android:layout_alignEnd="@+id/playlist_list_item_title" />

    <View
        android:id="@+id/horizontal_divider"
        android:layout_height="32dp"
        android:layout_width="1dp"
        android:background="#CCC"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/imageButton"
        android:layout_alignWithParentIfMissing="false"
        android:background="@drawable/ic_action_good"
        android:layout_alignTop="@+id/horizontal_divider"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp" />

</RelativeLayout>