<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Custom</item>
    </style>

    <style name="ActionBar.Solid.Custom" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_bg</item>
    </style>

    <!-- Custom styles for rooms activity -->
    <style name="RoomListItem.Name" parent="PlayListItem.Track">

    </style>
    <style name="RoomListItem.Queue" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#b0b0b0</item>
    </style>

    <style name="RoomListItem.Playing" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#b0b0b0</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RoomListItem.Track" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#363636</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Custom styles for player activity -->
    <style name="Player.EmptyState.Title" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#9933cc</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Player.EmptyState.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#555555</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Player.Track" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFF</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Player.AddTrack" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#666666</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PlayListItem.Track" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#363636</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="PlayListItem.Album" parent="PlayListItem.Track">
        <item name="android:textColor">#777777</item>
    </style>

</resources>
