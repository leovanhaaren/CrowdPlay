<resources>

    <!-- Base application theme. -->
    <style name="Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Theme.ActionBar.Solid</item>
        <item name="android:icon">@drawable/icon</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Theme.ActionBar.Transparent</item>
        <item name="android:icon">@drawable/icon</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.ActionBar.Solid" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_bg</item>
    </style>

    <style name="Theme.ActionBar.Transparent" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@null</item>
    </style>


    <style name="Drawer.Item" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>




    <style name="EmptyState.Title" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#9933cc</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="EmptyState.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#555555</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">italic</item>
    </style>




    <!-- Custom styles for rooms activity -->
    <style name="RoomListItem.Name" parent="PlayListItem.Title">

    </style>
    <style name="RoomListItem.Queue" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#b0b0b0</item>
    </style>

    <style name="RoomListItem.Playing" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#b0b0b0</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RoomListItem.Track" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#363636</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
    </style>





    <!-- Custom styles for player activity -->
    <style name="Player.Track" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFF</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="Player.Duration" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#777</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Player.AddTrack" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#666666</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PlayListItem.Title" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#363636</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="PlayListItem.Artist" parent="PlayListItem.Title">
        <item name="android:textColor">#777777</item>
    </style>
    <style name="PlayListItem.Vote" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#777</item>
    </style>
    <style name="PlayListItem.Duration" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#777</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>


    <style name="Track.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Track.Artist" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#777777</item>
    </style>


    <style name="About.Head" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#0099cc</item>
    </style>
    <style name="About.Text" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#555555</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="About.Text.Alt" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="About.Text.Large" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>
